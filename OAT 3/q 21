using System;

class Program
{
    static void Main()
    {
        while (true)
        {
            Console.Write("Digite um nÃºmero inteiro (ou digite 0 para parar):");
            int numero = Convert.ToInt32(Console.ReadLine());

            if (numero == 0)
            {
                Console.WriteLine("Programa encerrado.");
                break;
            }

            if (numero > 0)
            {
                Console.WriteLine("O numero e positivo.");
            }
            else
            {
                Console.WriteLine("O numeo e negativo.");
            }
        }
    }
}
